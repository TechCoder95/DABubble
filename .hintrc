{
  "extends": [
    "development"
  ],
  "hints": {
    "axe/text-alternatives": [
      "default",
      {
        "image-alt": "off"
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "button-name": "off"
      }
    ],
    "axe/forms": [
      "default",
      {
        "label": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "zoom",
          "scrollbar-width",
          "height: fit-content",
          "width: fit-content",
          "rotate",
          "max-width: fit-content"
        ]
      }
    ],
    "no-inline-styles": "off",
    "typescript-config/consistent-casing": "off",
    "axe/structure": [
      "default",
      {
        "list": "off"
      }
    ]
  }
}